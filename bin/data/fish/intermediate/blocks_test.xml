<blocks font="ArialNarrow.ttf" xmlns:blck="http://www.smm.org/">
	<bar name="motions" color="324288">
		<block name="flipper angle %d">
			<type>p</type>
            <dropdown>
                <ddlow>0</ddlow>
                <ddhigh>90</ddhigh>
            </dropdown>
			<file>flip.blk</file>
			<part>move flippers</part>
		</block>
		<block name="tail angle %d">
			<type>a</type>
            <dropdown>
                <ddlow>0</ddlow>
                <ddhigh>90</ddhigh>
            </dropdown>
			<file>tail.blk</file>
			<part>move tail</part>
		</block>
		<block name="wriggle speed %d">
			<type>g</type>
			<dropdown>
                <ddlow>0</ddlow>
                <ddhigh>100</ddhigh>
                <ddsteps>11</ddsteps>
            </dropdown>
			<file>wriggle.blk</file>
		</block>
	</bar>
	<bar name="sounds" color="841688">
		<block name="play sound %d">
			<type>S</type>
            <dropdown>
                <dds>GLUB</dds>
                <dds>BUBBLE</dds>
            </dropdown>
			<file>playSound.blk</file>
		</block>
		<block name="stop sounds">
			<type>A</type>
			<file>stopSound.blk</file>
		</block>
	</bar>
	<bar name="control" color="896016">
		<block name="repeat %d times">
			<type>F</type>
			<cond>1</cond>
            <dropdown>
                <ddlow>0</ddlow>
                <ddhigh>10</ddhigh>
                <ddsteps>11</ddsteps>
            </dropdown>
			<file>repeat.blk</file>
		</block>
		<block name="if %b">
			<type>i</type>
			<ifblock>true</ifblock>
			<cond>1</cond>
			<file>if.blk</file>
		</block>
        <block name="while %b">
            <cond>1</cond>
            <ifblock>true</ifblock>
            <file>while.blk</file>
        </block>
	</bar>
	<bar name="conditions" color="155890">
		<block name="button pressed">
			<wid>90</wid>
			<hgt>25</hgt>
            <num>true</num>
			<type>b</type>
			<file>button.blk</file>
		</block>
        <block name="arduino led %d">
            <type>m</type>
            <dropdown>
                <dds>ON</dds>
                <dds>OFF</dds>
            </dropdown>
			<file>led.blk</file>
		</block>
        <block name="pin %d %d">
            <dropdown>
                <ddlow>2</ddlow>
                <ddhigh>12</ddhigh>
            </dropdown>
            <dropdown>
                <dds>HIGH</dds>
                <dds>LOW</dds>
            </dropdown>
            <file>digitalWrite.blk</file>
        </block>
	</bar>
	<bar name="timing" color="883710">
		<block name="for %d seconds">
			<type>c</type>
			<cond>1</cond>
            <dropdown>
                <ddlow>0</ddlow>
                <ddhigh>10</ddhigh>
            </dropdown>
			<file>forSeconds.blk</file>
		</block>
		<block name="repeat forever">
			<cond>1</cond>
			<file>forever.blk</file>
		</block>
		<block name="delay %d second">
			<type>d</type>
            <dropdown>
                <ddlow>0</ddlow>
                <ddhigh>1</ddhigh>
            </dropdown>
			<file>delay.blk</file>
		</block>
	</bar>
	<bar name="automation" color="126447">
		<block name="move flippers %d">
			<type>L</type>
            <dropdown>
                <dds>STOP</dds>
                <dds>SLOW</dds>
                <dds>MED</dds>
                <dds>FAST</dds>
            </dropdown>
			<file>autoFlip.blk</file>
			<part>flipper angle</part>
		</block>
		<block name="move tail %d">
			<type>T</type>
            <dropdown>
                <dds>STOP</dds>
                <dds>SLOW</dds>
                <dds>MED</dds>
                <dds>FAST</dds>
            </dropdown>
			<file>autoTail.blk</file>
			<part>tail angle</part>
		</block>
	</bar>
	
</blocks>
	